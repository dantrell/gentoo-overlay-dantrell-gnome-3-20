+static gchar *
+workaround_spaces (const gchar *text)
+{
+	GString *tmp;
+	gchar *str = NULL;
+
+	tmp = e_str_replace_string (text, "&nbsp;", " ");
+	if (tmp) {
+		str = g_string_free (tmp, FALSE);
+		text = str;
+	}
+
+	tmp = e_str_replace_string (text, "", " ");
+	if (tmp) {
+		g_free (str);
+		str = g_string_free (tmp, FALSE);
+	} else if (!str) {
+		str = g_strdup (text);
+	}
+
+	return str;
+}
