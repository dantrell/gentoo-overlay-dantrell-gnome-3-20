+gulong
+e_dialogs_dom_table_get_column_count (EEditorPage *editor_page)
+{
+	WebKitDOMDocument *document;
+	WebKitDOMHTMLTableElement *table_element;
+	WebKitDOMHTMLCollection *rows = NULL, *columns = NULL;
+	WebKitDOMNode *row;
+	glong count;
