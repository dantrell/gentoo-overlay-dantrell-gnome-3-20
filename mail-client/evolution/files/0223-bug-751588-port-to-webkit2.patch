+			break;
+		case E_CONTENT_EDITOR_BLOCK_FORMAT_ORDERED_LIST:
+		case E_CONTENT_EDITOR_BLOCK_FORMAT_ORDERED_LIST_ALPHA:
+		case E_CONTENT_EDITOR_BLOCK_FORMAT_ORDERED_LIST_ROMAN:
