+static void
+webkit_find_controller_found_text_cb (WebKitFindController *find_controller,
+                                      guint match_count,
+                                      EWebKitEditor *wk_editor)
+{
+	if (wk_editor->priv->performing_replace_all) {
+		if (!wk_editor->priv->replaced_count)
