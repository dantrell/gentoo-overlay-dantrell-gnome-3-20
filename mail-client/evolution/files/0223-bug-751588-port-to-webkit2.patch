+
+			tmp = webkit_dom_document_get_element_by_id (
+				document, "-x-evo-selection-start-marker");
+
+			remove_node (WEBKIT_DOM_NODE (tmp));
+
+			webkit_dom_element_set_id (
+				element, "-x-evo-selection-start-marker");
