+		g_dbus_method_invocation_return_error (
+			invocation, G_DBUS_ERROR, G_DBUS_ERROR_INVALID_ARGS,
+			"No document for page ID: %" G_GUINT64_FORMAT, page_id);
+		return NULL;
+	}
