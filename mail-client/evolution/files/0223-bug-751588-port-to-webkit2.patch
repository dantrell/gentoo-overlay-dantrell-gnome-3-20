+                                          guint64 page_id)
+{
+	WebKitDOMDocument *document;
+	WebKitWebPage *web_page;
+
+	web_page = webkit_web_extension_get_page (web_extension, page_id);
+	if (!web_page) {
+		g_dbus_method_invocation_return_error (
+			invocation, G_DBUS_ERROR, G_DBUS_ERROR_INVALID_ARGS,
