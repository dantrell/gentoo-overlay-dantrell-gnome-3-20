+editor_undo_redo_manager_set_editor_page (EEditorUndoRedoManager *manager,
+					  EEditorPage *editor_page)
+{
+	g_return_if_fail (E_IS_EDITOR_PAGE (editor_page));
+
+	g_weak_ref_set (&manager->priv->editor_page, editor_page);
+}
