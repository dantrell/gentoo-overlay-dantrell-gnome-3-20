+{
+	EExtensible *extensible;
+	EContentEditor *cnt_editor;
+
+	extensible = e_extension_get_extensible (E_EXTENSION (extension));
+	cnt_editor = e_html_editor_get_content_editor (E_HTML_EDITOR (extensible));
