+		WebKitDOMElement *spacer;
+
+		spacer = prepare_top_signature_spacer (editor_page);
+		webkit_dom_node_insert_before (
+			WEBKIT_DOM_NODE (body),
+			WEBKIT_DOM_NODE (spacer),
+			webkit_dom_node_get_next_sibling (WEBKIT_DOM_NODE (signature)),
+			NULL);
